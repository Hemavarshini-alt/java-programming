import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter Student Register Number:");
        String registerNumber = scanner.nextLine();

        System.out.println("Enter Student Name:");
        String name = scanner.nextLine();

        System.out.println("Enter Semester:");
        int semester = scanner.nextInt();

        System.out.println("Enter Number of Theory Classes:");
        int theoryClasses = scanner.nextInt();

        System.out.println("Enter Number of Laboratory Courses:");
        int labCourses = scanner.nextInt();

        System.out.println("Enter Number of Lifeskill Courses:");
        int lifeskillCourses = scanner.nextInt();

   
        int theoryFee = 300;
        int labFee = 500;
        int lifeskillFee = 200;
      
        int totalExamFees = (theoryClasses * theoryFee) + (labCourses * labFee) + (lifeskillCourses * lifeskillFee);

        System.out.println("Student Details:");
        System.out.println("Register Number: " + registerNumber);
        System.out.println("Name: " + name);
        System.out.println("Semester: " + semester);
        System.out.println("Total Exam Fees: " + totalExamFees);
    }
}
